<form stylesheet="Home.css,singlevalue.css,ui_simple.css">
  <label>NMON CONFIG, Solaris Simple Inventory</label>
  <description/>
  <fieldset autoRun="true" submitButton="false">
    <input type="time" token="timerange" searchWhenChanged="true">
      <label>Time Range:</label>
      <default>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
      </default>
    </input>
    <input type="radio" token="datasource" searchWhenChanged="true">
      <label>Data Source:</label>
      <choice value="inputlookup nmon_inventory | search OStype=Solaris">Based on Nmon Inventory Lookup</choice>
      <choice value="search `nmon_config` | search OStype=&quot;Solaris&quot; | stats latest(cpu_cores) As cpu_cores, latest(Solaris_version) As Solaris_version,  latest(Processor) As Processor, latest(Solaris_processor_clockspeed) As Solaris_processor_clockspeed, latest(nmon_version) As nmon_version by hostname | fillnull value=Undeterminated">Based on Nmon Raw Data</choice>
      <default>inputlookup nmon_inventory | search OStype=Solaris</default>
    </input>
  </fieldset>
  <searchTemplate>| $datasource$</searchTemplate>
  <earliestTime>$timerange.earliest$</earliestTime>
  <latestTime>$timerange.latest$</latestTime>
  <row>
    <html>
      <div style="text-align: center;">
        <img src="../../static/app/nmon/icons/grey_theme/inventory.png" alt="Inventory"/>
      </div>
      <div class="custom">
        <h1>Solaris Inventory Summary</h1>
      </div>
    </html>
  </row>
  <row>
    <single>
      <searchPostProcess>stats count</searchPostProcess>
      <option name="afterLabel">Solaris Hosts known within this period</option>
      <option name="beforeLabel">Found</option>
    </single>
  </row>
  <row grouping="1,1">
    <chart>
      <title>Solaris version</title>
      <searchPostProcess>stats count by Solaris_version</searchPostProcess>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">minimal</option>
      <option name="charting.drilldown">all</option>
      <option name="height">300px</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
    <table>
      <title>Table Stats</title>
      <searchPostProcess>| top limit=0 Solaris_version | eval percent=round(percent,2) | rename count As "Number of Hosts" | strcat percent "%" percent | rename percent As "Percent (%)"</searchPostProcess>
      <earliestTime>$earliest$</earliestTime>
      <latestTime>$latest$</latestTime>
    </table>
  </row>
  <row grouping="1,1">
    <chart>
      <title>CPUs cores Capacity</title>
      <searchPostProcess>stats count by cpu_cores</searchPostProcess>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">pie</option>
      <option name="charting.chart.nullValueMode">gaps</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">minimal</option>
      <option name="charting.drilldown">all</option>
      <option name="height">300px</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
    <table>
      <title>Table Stats</title>
      <searchPostProcess>| top limit=0 cpu_cores | eval percent=round(percent,2) | rename count As "Number of Hosts" | strcat percent "%" percent | rename percent As "Percent (%)"</searchPostProcess>
    </table>
  </row>
  <row grouping="1,1">
    <chart>
      <title>Processor</title>
