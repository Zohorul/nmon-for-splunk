      </single>

    </panel>
  </row>

  <row>
    <panel>
    <title>Search:</title>

      <input type="text" token="frameID" searchWhenChanged="true">
        <label>Search for frame(s):</label>
        <default>*</default>
        <prefix>frameID="</prefix>
        <suffix>"</suffix>
      </input>     

      <input type="text" token="hostname" searchWhenChanged="true">
        <label>Search for host(s):</label>
        <default>*</default>
        <prefix>hostname="</prefix>
        <suffix>"</suffix>
