    </table>
  </row>
  <row grouping="1,1">
    <chart>
      <title>Linux Kernel</title>
      <searchPostProcess>search $hostname$ $Linux_distribution$ $Processor$ $cpu_cores$ $Linux_kernelversion$ $nmon_version$ | stats count by Linux_kernelversion</searchPostProcess>
