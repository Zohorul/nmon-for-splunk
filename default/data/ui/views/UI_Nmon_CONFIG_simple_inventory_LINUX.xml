      <title>Table Stats</title>
      <searchPostProcess>search $hostname$ $Linux_distribution$ $Processor$ $cpu_cores$ $Linux_kernelversion$ $nmon_version$ | top limit=0 Linux_kernelversion | eval percent=round(percent,2) | rename count As "Number of Hosts" | strcat percent "%" percent | rename percent As "Percent (%)"</searchPostProcess>
    </table>
  </row>
  <row grouping="1,1">
    <chart>
      <title>Nmon version</title>
      <searchPostProcess>search $hostname$ $Linux_distribution$ $Processor$ $cpu_cores$ $Linux_kernelversion$ $nmon_version$ | stats count by nmon_version</searchPostProcess>
      <option name="charting.axisTitleX.visibility">visible</option>
