      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
    <table>
      <title>Table Stats</title>
      <searchPostProcess>search $hostname$ $Linux_distribution$ $Processor$ $cpu_cores$ $Linux_kernelversion$ $nmon_version$ | top limit=0 nmon_version | eval percent=round(percent,2) | rename count As "Number of Hosts" | strcat percent "%" percent | rename percent As "Percent (%)"</searchPostProcess>
    </table>
  </row>
  <row>
    <table>
      <title>Table Stats</title>
      <searchPostProcess>search $hostname$ $Linux_distribution$ $Processor$ $cpu_cores$ $Linux_kernelversion$ $nmon_version$ | fields hostname,cpu_cores,OStype,Processor,Linux_memory_MB,Linux_swap_MB,Linux_distribution,Linux_kernelversion,nmon_version</searchPostProcess>
      <earliestTime>$timerange.earliest$</earliestTime>
      <latestTime>$timerange.latest$</latestTime>
